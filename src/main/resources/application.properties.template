# OpenCage Geocoding API Key (get from https://opencagedata.com/)
# For local development, replace YOUR_OPENCAGE_API_KEY_HERE with your actual key
# For Heroku deployment, set OPENCAGE_API_KEY environment variable
opencage.api.key=${OPENCAGE_API_KEY:YOUR_OPENCAGE_API_KEY_HERE}

# Database Configuration (JawsDB MySQL for production, H2 for local development)
spring.datasource.url=${JAWSDB_URL:jdbc:h2:mem:testdb}
spring.datasource.driverClassName=${DATABASE_DRIVER:org.h2.Driver}
spring.datasource.username=${DATABASE_USERNAME:sa}
spring.datasource.password=${DATABASE_PASSWORD:}

# H2 Console (for debugging - only works with H2)
spring.h2.console.enabled=true
spring.h2.console.path=/h2-console

# JPA Configuration
spring.jpa.database-platform=${JPA_DIALECT:org.hibernate.dialect.H2Dialect}
spring.jpa.hibernate.ddl-auto=create-drop
spring.jpa.show-sql=true

# Initialize database
spring.sql.init.mode=always

# AI Services Configuration
# OpenAI API Key for enhanced weather descriptions (optional)
openai.api.key=${OPENAI_API_KEY:}

